<script>
  // Responsiveness helpers: toggle UI pieces by width
  function applyResponsive() {
    const mobileDock = document.getElementById('mobileDock');
    const left = document.getElementById('leftPanel');
    const right = document.getElementById('rightPanel');
    if(window.innerWidth <= 899){
      mobileDock.style.display = 'flex';
      left.style.display = 'none';
      right.style.display = 'none';
    } else {
      mobileDock.style.display = 'none';
      left.style.display = '';
      right.style.display = '';
      // ensure mobile inspector closed
      closeInspectorMobile();
      closeMedia();
    }
  }
  window.addEventListener('resize', applyResponsive);
  window.addEventListener('load', applyResponsive);

  // Timeline expand/hide
  const timeline = document.getElementById('timelinePanel');
  document.getElementById('expandTimeline').addEventListener('click', ()=> {
    timeline.style.height = (timeline.style.height === '36vh' || !timeline.style.height) ? '48vh' : '36vh';
  });
  document.getElementById('closeTimeline').addEventListener('click', ()=> { timeline.style.display = 'none'; setTimeout(()=> timeline.style.display='flex', 1200); });

  // Mobile inspector open/close
  const inspectorPanel = document.getElementById('inspectorPanel');
  function openInspectorMobile(){ inspectorPanel.classList.add('open'); inspectorPanel.setAttribute('aria-hidden','false'); }
  function closeInspectorMobile(){ inspectorPanel.classList.remove('open'); inspectorPanel.setAttribute('aria-hidden','true'); }
  document.getElementById('openInspectorBtn').addEventListener('click', ()=> {
    if(window.innerWidth <= 899) openInspectorMobile();
    else alert('Inspector visible on right (desktop).');
  });
  document.getElementById('openMediaBtn').addEventListener('click', ()=> openMedia());
  document.getElementById('closeInspectorMobile').addEventListener('click', closeInspectorMobile);

  // Media modal open/close
  function openMedia(){ const m = document.getElementById('mediaModal'); m.style.display='flex'; m.setAttribute('aria-hidden','false'); }
  function closeMedia(){ const m = document.getElementById('mediaModal'); m.style.display='none'; m.setAttribute('aria-hidden','true'); }
  document.getElementById('closeMedia').addEventListener('click', closeMedia);
  document.getElementById('insertMedia').addEventListener('click', ()=> { closeMedia(); alert('Inserted (simulated)'); });

  // Playhead drag (simple)
  const playhead = document.getElementById('playhead');
  const scrub = document.getElementById('scrub');
  let dragging=false;
  playhead.addEventListener('pointerdown', e=>{ dragging=true; playhead.setPointerCapture(e.pointerId); });
  window.addEventListener('pointermove', e=> {
    if(!dragging) return;
    const rect = scrub.getBoundingClientRect();
    let x = Math.max(rect.left, Math.min(rect.right, e.clientX));
    let pct = (x - rect.left) / rect.width;
    playhead.style.left = (pct*100) + '%';
  });
  window.addEventListener('pointerup', ()=> dragging=false);

  // Simple navigation for demo
  document.getElementById('btnDashboard').addEventListener('click', ()=> { alert('Open Dashboard (simulated)'); });
  document.getElementById('btnVideo').addEventListener('click', ()=> { document.getElementById('pageTitle').textContent='Video Workspace'; });
  document.getElementById('btnPhoto').addEventListener('click', ()=> { document.getElementById('pageTitle').textContent='Photo Workspace'; });
  document.getElementById('btnLogo').addEventListener('click', ()=> { document.getElementById('pageTitle').textContent='Logo Workspace'; });
</script>
</body>
